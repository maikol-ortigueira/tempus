<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset name="basic">
    <field
      name="id"
      type="text"
      readonly="true"
      class="readonly"
      default="0"
      description="JGLOBAL_FIELD_ID_DESC"/>
    <field
      name="ordering"/>
    <field
      name="state"
      default="1"
      type="list"
      label="JSTATUS"
      description="JFIELD_PUBLISHED_DESC"
      class="inputbox"
      size="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field>
    <field
      name="created_by"
      type="createdby"
      default="0"
      label="COM_TEMPUS_SINGER_CREATED_BY_LBL"
      description="COM_TEMPUS_SINGER_CREATED_BY_DESC"
      hidden="true"
      hint="COM_TEMPUS_SINGER_CREATED_BY_LBL"/>
    <field
      name="modified_by"
      type="modifiedby"
      default="0"
      label="COM_TEMPUS_SINGER_MODIFIED_BY_LBL"
      description="COM_TEMPUS_SINGER_MODIFIED_BY_DESC"
      hidden="true"
      hint="COM_TEMPUS_SINGER_MODIFIED_BY_LBL"/>
    <field
      name="version_note"
      type="text"
      label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
      description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
      class="inputbox"
      size="45"
      labelclass="control-label"/>
    <!--###basic###-->
  </fieldset>
  <fieldset name="hidden-fields">
    <field
      name="checked_out"
      type="hidden"
      filter="unset"/>
    <field
      name="checked_out_time"
      default="0000-00-00 00:00:00"
      type="hidden"
      filter="unset"/>
    <!--###hidden-fields###-->
  </fieldset>
  <fieldset name="details">
    <field
      name="user_id"
      type="user"
      label="COM_COMPONENT_SINGER_FIELD_USER_ID_LBL"
      description="COM_COMPONENT_SINGER_FIELD_USER_ID_DESC"
      showon="name:"
    />
    <field
      name="name"
      type="text"
      class="inputbox"
      label="COM_TEMPUS_SINGER_NAME_LBL"
      description="COM_TEMPUS_SINGER_NAME_DESC"
      filter="STRING"
      size="40"
      readonly="true"
      showon="email!:"
    />
  	<field
      name="surname"
      type="text"
      label="COM_COMPONENT_SINGER_FIELD_SURNAME_LBL"
      description="COM_COMPONENT_SINGER_FIELD_SURNAME_DESC"
      readonly="true"
      showon="email!:"
    />
    <field
      name="nickname"
      type="text"
      label="COM_COMPONENT_SINGER_FIELD_NICKNAME_LBL"
      description="COM_COMPONENT_SINGER_FIELD_NICKNAME_DESC"
      readonly="true"
      showon="email!:"
    />
    <field
      name="email"
      type="email"
      validate="email"
      label="JGLOBAL_EMAIL"
      description=""
      message="JGLOBAL_EMAIL_DOMAIN_NOT_ALLOWED"
      readonly="true"
      showon="email!:"
    />
    <field
      name="range"
      type="helperlist"
      helper_getter="voices"
      exclude="0"
      empty_option="- Selecciona registro -"
      label="COM_COMPONENT_SINGER_FIELD_RANGE_LBL"
      description="COM_COMPONENT_SINGER_FIELD_RANGE_DESC"
      showon="email!:"
    />
  <!--###details###-->
  </fieldset>
</form>
