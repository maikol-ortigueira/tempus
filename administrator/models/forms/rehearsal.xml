<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset name="general">
    <field
      name="id"
      type="text"
      readonly="true"
      class="readonly"
      default="0"
      description="JGLOBAL_FIELD_ID_DESC"/>
    <field
      name="ordering"/>
    <field
      name="state"
      default="1"
      type="list"
      label="JSTATUS"
      description="JFIELD_PUBLISHED_DESC"
      class="inputbox"
      size="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field>
    <field
      name="created_by"
      type="createdby"
      default="0"
      label="COM_TEMPUS_CREATED_BY_LBL"
      description="COM_TEMPUS_CREATED_BY_DESC"
      hidden="true"
      hint="COM_TEMPUS_CREATED_BY_LBL"/>
    <field
      name="modified_by"
      type="modifiedby"
      default="0"
      label="COM_TEMPUS_MODIFIED_BY_LBL"
      description="COM_TEMPUS_MODIFIED_BY_DESC"
      hidden="true"
      hint="COM_TEMPUS_MODIFIED_BY_LBL"/>
    <field
      name="version_note"
      type="text"
      label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
      description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
      class="inputbox"
      size="45"
      labelclass="control-label"/>
    <field
			name="note"
			type="text"
			label="COM_TEMPUS_FIELD_NOTE_LBL"
			description="COM_TEMPUS_REHEARSAL_FIELD_NOTE_DESC"
			class="span12"
			size="40"
			maxlength="255"
		/>
    <!--###general###-->
  </fieldset>
  <fieldset name="hidden">
    <field
      name="checked_out"
      type="hidden"
      filter="unset"/>
    <field
      name="checked_out_time"
      default="0000-00-00 00:00:00"
      type="hidden"
      filter="unset"/>
    <!--###hidden###-->
  </fieldset>
  <fieldset name="details">
   	<field
      name="title"
      type="text"
      label="COM_TEMPUS_REHEARSAL_FIELD_TITLE_LBL"
      description="COM_TEMPUS_REHEARSAL_FIELD_TITLE_DESC"
	  />
		<field
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
			size="40"
		/>
    <!--###details###-->
  </fieldset>
</form>
